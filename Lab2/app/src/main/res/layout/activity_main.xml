<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- row 1 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".01"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:id="@+id/row1"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:text="Item price"/>
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <!-- row 2 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".1"
        app:layout_constraintStart_toStartOf="@id/row1"
        android:orientation="horizontal"
        android:id="@+id/row2"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Quantity"/>
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <!-- row 3 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".2"
        app:layout_constraintStart_toStartOf="@id/row2"
        android:orientation="horizontal"
        android:id="@+id/row3"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/subtotal"
            android:textColor="@android:color/holo_green_dark"
            android:text="Subtotal"/>
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtotal_label"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <!-- row 4 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".3"
        app:layout_constraintStart_toStartOf="@id/row3"
        android:orientation="horizontal"
        android:id="@+id/row4"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/tax"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Tax (7.5%)"/>
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/tax_label"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <!-- row 5 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".4"
        app:layout_constraintStart_toStartOf="@id/row3"
        android:orientation="horizontal"
        android:id="@+id/row5"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:id="@+id/total"
            android:textColor="@android:color/holo_orange_light"
            android:text="Total"/>
        <EditText
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/total_label"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <!-- last row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".5"
        app:layout_constraintStart_toStartOf="@id/row4"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compute"
            android:background="@android:color/holo_purple"
            android:layout_marginLeft="20dp"
            android:id="@+id/compute"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>